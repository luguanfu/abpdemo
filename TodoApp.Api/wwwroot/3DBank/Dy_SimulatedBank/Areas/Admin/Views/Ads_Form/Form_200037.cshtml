<script src="~/Scripts/bootstrap-table.min.js"></script>
<script type="text/javascript">
    setOptions(['cashItems', 'transactionCategory', 'abstract', 'accountType', 'accountNature1', 'currency', 'remittance', 'accountGrade']);
    var data = [];
    function setTableValue(values) {
        var vals = values.split('\n');
        data = [{
            'penNumber': vals[0],
            'productName': vals[1],
            'currency': vals[2],
            'remittance': vals[3],
            'openingAmount': vals[4],
            'accountAmount': vals[5],
            'availableAmount': vals[6],
            'openingDate': vals[7],
        }];
        $("#tbl").bootstrapTable('load', data);
    }
    $('#tbl').bootstrapTable({
        data: data,
        columns: [
            {
                checkbox: true,
                align: 'center',
            },
            {
                title: '序号',
                align: 'center',
                formatter: function (value, row, index) {
                    return index + 1;
                }
            },
            {
                title: '笔号',
                field: 'penNumber',
                align: 'center'
            },
            {
                title: '产品名称',
                field: 'productName',
                align: 'center'
            },
            {
                title: '币种',
                field: 'currency',
                align: 'center',
            },
            {
                title: '钞汇',
                field: 'remittance',
                align: 'center',
            },
            {
                title: '开户金额',
                field: 'openingAmount',
                align: 'center'
            },
            {
                title: '账户金额',
                field: 'accountAmount',
                align: 'center'
            },
            {
                title: '可用金额',
                field: 'availableAmount',
                align: 'center'
            },
            {
                title: '开户日期',
                field: 'openingDate',
                align: 'center'
            },
        ]
    });
    function showTab() {
        $(".tab1").hide();
        $(".tab2").show();
    }
    function changecashdiv(t) {
        if ($(t).val() == "1") {
            $("#cashdiv").show();
        } else {
            $("#cashdiv").hide();
        }
    }
    function doSubmit() {
        checkEmpowe();
    }
    $(function () {
        initData("200015");
    });
</script>
