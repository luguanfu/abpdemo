<script src="~/Scripts/bootstrap-table-treegrid.min.js"></script>

<script>
    var data = [];
    function setTableValue(values) {
        var vals = values.split('\n');
        data = [{
            'account': vals[0],
            'accountName': vals[1],
            'openingAgency': vals[2],
            'deductionID': vals[3],
        }];
        $("#tbl").bootstrapTable('load', data);
    }
    $('#tbl').bootstrapTable({
        data: data,
        columns: [{
            checkbox: true,
            align: 'center',
            valign: 'middle'
        },
        {
            title: '序号',
            align: 'center',
            formatter: function (value, row, index) {
                return index + 1;
            }
        },
        {
            title: '账号',
            field: 'account',
            align: 'center'
        },
        {
            title: '户名',
            field: 'accountName',
            align: 'center'
        },
        {
            title: '开户机构',
            field: 'openingAgency',
            align: 'center',
        },
        {
            title: '扣费账户标识',
            field: 'deductionID',
            align: 'center',
        },
        ]
    });
    $('#tbl1').bootstrapTable({
        data: options.menus,
        idField: 'id',
        treeShowField: 'name',
        parentIdField: 'pid',
        columns: [
            {
                checkbox: true,
                align: 'center',
            },
            {
                title: '选择开通的业务',
                field: 'name',
            }
        ],
        onPostBody: function () {
            var columns = $('#tbl1').bootstrapTable('getOptions').columns

            if (columns && columns[0][1].visible) {
                $('#tbl1').treegrid({
                    treeColumn: 1,
                    onChange: function () {
                        $('#tbl1').bootstrapTable('resetView')
                    }
                })
            }
        }
    });
