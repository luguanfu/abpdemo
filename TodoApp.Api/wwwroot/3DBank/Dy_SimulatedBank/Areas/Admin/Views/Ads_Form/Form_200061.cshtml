            align: 'center',
            formatter: function (value, row, index) {
                return index + 1;
            }
        },
        {
            title: '用户编号',
            field: 'userNumber',
            align: 'center'
        },
        {
            title: '姓名',
            field: 'name',
            align: 'center'
        },
        {
            title: '证件类型',
            field: 'certificateType',
            align: 'center',
        },
        {
            title: '证件号码',
            field: 'certificateNumber',
            align: 'center',
        },
        {
            title: '用户权限',
