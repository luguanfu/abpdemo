@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["nvc"] = "案例管理";
}

<style>
    .btnSelect {
        background-color: darkseagreen;
        pointer-events: none;
        cursor: default;
        opacity: 0.6;
    }

    .note-editor {
        min-height: 100px;
        height: 150px;
    }
</style>

<!--富文本编辑器样式-->
<link href="~/CSS/plugins/summernote/summernote.css" rel="stylesheet" />
<link href="~/CSS/plugins/summernote/summernote-bs3.css" rel="stylesheet" />
<!--富文本编辑器js-->
<script src="~/Scripts/summernote/summernote.min.js"></script>
<script src="~/Scripts/summernote/summernote-zh-CN.js"></script>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <h2><a href="/Admin/CaseManagement">案例管理</a></h2>
            </li>
            <li>
                @((ViewData["addtype"].ToString() == "1") ? "新建案例" : "编辑案例")
            </li>
        </ol>

        <div class="col-sm-12 m-t-sm m-b-lg text-center">
            <button class="btn  btn-lg    btn-success m-r-lg" name="senceSelect" value="1" onclick="selectScene(this)">基本信息</button>
            <i class="fa fa-arrow-circle-right fa-2x m-r-xs"></i>
            <button class="btn   btn-lg btn-outline   btn-success m-l-lg m-r-lg" name="senceSelect" value="2" onclick="selectScene(this)">业务场景设置</button>
            <i class="fa fa-arrow-circle-right fa-2x m-r-xs"></i>
            <button class="btn   btn-lg  btn-outline btn-success m-l-lg m-r-lg" name="senceSelect" value="3" onclick="selectScene(this)">客户列表</button>
            <i class="fa fa-arrow-circle-right fa-2x m-r-xs"></i>
            <button class="btn   btn-lg btn-outline  btn-success m-l-lg m-r-lg" name="senceSelect" value="4" onclick="selectScene(this)">能力分值设置</button>
        </div>

        <input type="hidden" id="taskid" value="@ViewData["taskid"]" />
        <input type="hidden" id="addtype" value="@ViewData["addtype"]" />
        <input type="hidden" id="operscene" value="@ViewData["operscene"]" />
    </div>
</div>
<!--面包屑位置结束-->
<!--主体内容开始-->
<div class="ibox-content">
    <form class="form-horizontal" name="Addform" id="Addform">

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"><span class="text-danger">*</span>案例名称：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="TaskName" name="txtTitle" placeholder="请输入案例名称" value="" maxlength="20">
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label"><span class="text-danger">*</span>获得能力项：</label>
            <div class="col-sm-8">
                <input class="i-checks" type="radio" name="IsAccessibility" value="1" />开启 &nbsp;&nbsp;&nbsp;
                <input class="i-checks" type="radio" name="IsAccessibility" value="2" />关闭
            </div>
        </div>

        <div class="form-group" hidden>
            <label for="inputEmail3" class="col-sm-2 control-label">任务说明：</label>
            <div class="col-sm-10">
                <!--编辑器开始-->
                <div class="ibox-content no-padding">
                    <div class="summernote" id="TaskDescribe">
                    </div>
                </div>

                <!--编辑器结束-->
            </div>
        </div>

        <div class="form-group" hidden>
            <label for="inputEmail3" class="col-sm-2 control-label">任务目标：</label>
            <div class="col-sm-10">
                <!--编辑器开始-->
                <div class="ibox-content no-padding">
                    <div class="summernote" id="TaskImportant">
                    </div>
                </div>

                <!--编辑器结束-->
            </div>
        </div>

        <div class="form-group" hidden>
            <label for="inputEmail3" class="col-sm-2 control-label">学习讨论及总结：</label>
            <div class="col-sm-10">
                <!--编辑器开始-->
                <div class="ibox-content no-padding">
                    <div class="summernote" id="TaskExplain">
                    </div>
                </div>

                <!--编辑器结束-->
            </div>
        </div>


        <div class="box-footer">
            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <a class="btn btn-w-m btn-success m-r-lg" href="javascript:void(0);" onclick="BtnSubmit()">保存</a>
                    <a class="btn btn-w-m btn-white " href="/Admin/CaseManagement">取消</a>
                </div>
            </div>
        </div>
    </form>

</div>




<script src="~/Js/Admin/CaseManagement/OperSceneSelect.js"></script>

<script src="~/Js/Admin/CaseManagement/AddOrEditInfo.js"></script>