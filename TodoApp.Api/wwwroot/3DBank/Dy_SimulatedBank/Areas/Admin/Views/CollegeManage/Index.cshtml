@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["nvc"] = "学院管理";
    @model System.Data.DataTable
}
<link href="~/CSS/chosen/chosen.css" rel="stylesheet" />
<script src="~/Scripts/chosen/chosen.jquery.js"></script>

<style type="text/css">
    .chosen-container .chosen-results {
        max-height: 120px;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <h2>组织架构管理</h2>
            </li>
            <li>
                <a href="#">学院管理</a>
            </li>
            <li>
                <strong>学院列表</strong>
            </li>
        </ol>

    </div>
</div>


<div class="ibox-content">
    <div class="row m-t" id="selcxdiv">

        <div class="col-sm-3">
            <select class="chosen-select" id="txtSchoolId" style="width: 100%;" tabindex="2">
                <option value="">请选择学校</option>
                @foreach (System.Data.DataRow item in Model.Rows)
                {
                    <option value="@item["S_ID"]">@item["SchoolName"]</option>
                }
            </select>
        </div>
        <div class="col-sm-3">
            <div class="input-group">
                <input type="text" placeholder="请输入关键字搜索……" id="txtCollegeName" class="form-control" name="txtCollegeName">
                <span class="input-group-btn">
                    <button type="button" onclick="SearchInfo()" class="btn btn-primary"><i class="fa fa-search "></i></button>
                </span>
            </div>
        </div>
        <div class=" col-sm-6 text-right">
            <button onclick="Add()" class="btn btn-primary btn-sm " type="button"><i class="fa fa-plus m-r-xs"></i><span class="bold">新增学院</span></button>
            <button onclick="del_all()" class="btn btn-warning btn-sm " type="button"><i class="fa fa-trash m-r-xs"></i><span class="bold">删除学院</span></button>
        </div>
    </div>
    <div class="row  m-t-sm ">
        <div class="col-sm-12">
            <table class="table text-center table-bordered ">
                <thead>
                    <tr>
                        <th class="text-center">
                            <input type="Checkbox" class="i-checks checkbox-all"></th>
                        <th class="text-center">学校名称</th>
                        <th class="text-center">学院名称</th>
                        <th class="text-center">专业数量</th>

                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody class="new_table text-center" id="tablelist">
                   
                </tbody>
            </table>

        </div>
        <!--分页开始-->
        <div class="row text-center m-t-md" id="PaginatorLibrary">
        </div>
        <!--分页结束-->
    </div>
</div>


<!--新增弹框-->
<div id="Add_div" style="display: none;" class="form-inline">
    <form name="Add_form" id="Add_form">
        <div class="col-sm-12">
            <div class="form-horizontal  m-t-lg">
                <label for="firstname" class="col-sm-3 control-label"><span style="color: red;">*</span>学校选择：</label>
                <div class="col-sm-9">
                    <select class="chosen-select" id="SelSchoolId" tabindex="2" >
                        <option value="0">请选择学校</option>
                        @foreach (System.Data.DataRow item in Model.Rows)
                        {
                            <option value="@item["S_ID"]">@item["SchoolName"]</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-horizontal  m-t-lg">
                <label for="firstname" class="col-sm-3 control-label"><span style="color: red;">*</span>学院名称：</label>
                <div class="col-sm-9">
                    <input style="width: 100%;" autocomplete="off" type="text" class="form-control" id="txtName" name="txtName" placeholder="请输入学院名称">
                </div>
            </div>
        </div>


    </form>
</div>

<div id="Edit_div" style="display: none;" class="form-inline">
    <form name="Edit_form" id="Edit_form">
        <div class="col-sm-12">
            <div class="form-horizontal  m-t-lg">
                <label for="firstname" class="col-sm-3 control-label"><span style="color: red;">*</span>学校选择：</label>
                <div class="col-sm-9">
                    <select class="chosen-select" id="SelEditSchoolId" tabindex="2" >
                        <option value="0">请选择学校</option>
                        @foreach (System.Data.DataRow item in Model.Rows)
                        {
                            <option value="@item["S_ID"]">@item["SchoolName"]</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-horizontal  m-t-lg">
                <label for="firstname" class="col-sm-3 control-label"><span style="color: red;">*</span>学院名称：</label>
                <div class="col-sm-9">
                    <input style="width: 100%;" autocomplete="off" type="text" class="form-control" id="txtEditName" name="txtEditName" placeholder="请输入学院名称">
                </div>
            </div>
        </div>


    </form>
</div>

<script src="~/JS/Admin/CollegeManage/CollegeManage.js"></script>
