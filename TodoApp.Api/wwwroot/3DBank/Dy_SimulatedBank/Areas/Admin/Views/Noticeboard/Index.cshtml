@{
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["nvc"] = "公告栏";
}

<link href="~/CSS/chosen/chosen.css" rel="stylesheet" />
<script src="~/Scripts/chosen/chosen.jquery.js"></script>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <h2>系统管理</h2>
            </li>
            <li>
                <a href="javascript:viod(0)">公告栏</a>
            </li>
            <li>
                <strong>公告列表</strong>
            </li>
        </ol>

    </div>
</div>
<div class="ibox-content">
    <div class="row m-t">
        <div class="col-sm-3">
            <div class="input-group">
                <input type="text" placeholder="输入公告信息" id="SelectcheckName" class="form-control">
                <span class="input-group-btn">
                    <button type="button" onclick="Search()" class="btn btn-primary"><i class="fa fa-search "></i></button>
                </span>
            </div>
        </div>
        <div class=" col-sm-9 text-right">
            <button onclick="Add_case()" class="btn btn-info " type="button"><i class="fa fa-plus m-r-xs"></i><span class="bold">新增公告</span></button>
            <button onclick="del_all()" class="btn btn-warning " type="button"><i class="fa fa-trash m-r-xs"></i><span class="bold">删除</span></button>
        </div>
    </div>
    <div class="row  m-t-sm ">
        <div class="col-sm-12">
            <table class="table text-center table-bordered ">
                <thead>
                    <tr>
                        <th class="text-center">
                            <input type="Checkbox" class="i-checks checkbox-all">
                        </th>
                        <th class="text-center">公告标题</th>
                        <th class="text-center">发布时间</th>
                        <th class="text-center">公告内容</th>
                        <th class="text-center">公告状态</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody class="new_table text-center" id="tablelist"></tbody>
            </table>
        </div>
    </div>
    <!--分页开始-->
    <div class=" text-center">
        <div class="dataTables_paginate paging_simple_numbers" id="PaginatorLibrary">
        </div>
    </div>
    <!--分页结束-->
</div>
<!--新增弹框-->
<div id="Add_case" style="display: none;" class="form-inline">

    <form name="Add_schoolform" id="Add_schoolform">
        <div class="col-sm-12">
            <div class="form-horizontal  m-t-lg">
                <label for="inputEmail3" class="col-sm-3 control-label"><span class="text-danger">*</span> 公告标题：</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="" id="Bulletintitle" value="" />
                </div>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="form-horizontal  m-t-lg">
                <label for="inputEmail3" class="col-sm-3 control-label"><span class="text-danger">*</span> 公告内容：</label>
                <div class="col-sm-9">
                    <textarea class="form-control" id="Bulletincontent" name="txt" clos=",5" rows="5" warp="virtual" style="margin: 0px; width: 350px; height: 95px;" placeholder="最长500个字符"></textarea>
                </div>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="form-horizontal  m-t-lg">
                <label for="inputEmail3" class="col-sm-3 control-label"><span class="text-danger">*</span>分配班级：</label>
                <div class="col-sm-9" id="seleid">
                    <select data-placeholder="请选择班级" id="AddTeamId" class="chosen-select" multiple style="width: 350px;" tabindex="4">
                        <option value="">请选择班级</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-sm-12 text-center">
            <div class="form-horizontal  m-t-lg">
                <div class="inputEmail3">
                    <a class="btn btn-w-m btn-success m-r-lg" onclick="AddExamination()">保存</a>
                </div>
            </div>
        </div>
    </form>

</div>
<script src="~/Js/Admin/Noticeboard/Noticeboard.js"></script>