@{
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    if (Request["AllType"] == "1")
    {
        ViewData["nvc"] = "个人实训考核";
    }
    else{
        ViewData["nvc"] = "团队实训考核";
    }
 }

    <div class="row   white-bg dashboard-header">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li>
                    <h2>考试管理</h2>
                </li>
                @if (Request["AllType"] == "1")
                {
                    <li>
                        <a href="#">个人实训考核设置</a>
                    </li>
                    <li>
                        <strong>个人实训考核列表</strong>
                    </li>
                }
                else
                {
                    <li>
                        <a href="#">团队实训考核设置</a>
                    </li>
                    <li>
                        <strong>团队实训考核列表</strong>
                    </li>
                }
            </ol>
        </div>
        <div class="ibox-content">

            <div class="row">
                <div class="col-sm-3">
                    <div class="input-group">
                        <input type="text" placeholder="输入考核名称" id="E_Name" class="form-control">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-primary" onclick="SearchInfo()">查找</button>
                        </span>
                    </div>
                </div>
                <div class="col-sm-9 text-right">
                    <button onclick="javascript:window.location.href = '/Admin/PersonalTraining/Add?PracticeId=0&AllType=@Request["AllType"]';" class="btn btn-primary btn-sm " type="button"><i class="fa fa-plus m-r-xs"></i><span class="bold">新增考核</span></button>
                    <button onclick="Delete()" class="btn btn-warning btn-sm"><i class="fa fa-trash m-r-xs"></i><span class="bold">删除考试设置</span></button>
                    <button onclick="UpdateState(1)" class="btn btn-info btn-sm" type="button"><i class="fa fa-check-square-o m-r-xs"></i><span class="bold">激活</span></button>
                    <button onclick="UpdateState(2)" class="btn btn-danger  btn-sm" type="button"><i class="fa fa-power-off m-r-xs"></i><span class="bold">关闭激活</span></button>

                </div>
            </div>


            <div class="row m-t-sm table-responsive">
                <div class="col-sm-12">
                    <table class="table text-center table-bordered ">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    <input type="Checkbox" class="i-checks checkbox-all">
                                </th>
                                <th class="text-center">考核名称</th>
                                <th class="text-center">开始时间</th>
                                <th class="text-center">考核时长</th>
                                <th class="text-center">竞赛模式</th>
                                <th class="text-center">激活状态</th>
                                <th class="text-center">操作</th>
                            </tr>
                        </thead>
                        <tbody class="new_table text-center" id="tablelist"></tbody>
                    </table>
                </div>
            </div>
                <!--分页开始-->
                <div class="row text-center" id="PaginatorLibrary">
                </div>
                <!--分页结束-->
            </div>
    </div>
    <script src="~/JS/Admin/PersonalTraining/Index.js"></script>