@{
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["nvc"] = "课时安排";
}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <h2>组织架构管理</h2>
            </li>
            <li>
                <a href="/Admin/Teachinghours">课时安排</a>
            </li>
            <li>
                <strong id="BjName">@ViewData["ClassName"]</strong>
            </li>
        </ol>

    </div>
</div>


<!--面包屑位置结束-->


<div class="ibox-content">


    <input type="text" hidden="hidden" id="ModeId" value="@Request["ModeId"]" />
    <input type="text" hidden="hidden" id="TaskId" value="@Request["TaskId"]" />
    <div class="row m-t">
        <div class="col-sm-3">
            <div class="input-group">
                <input type="text" placeholder="请输入课程名称" id="CurriculumName" class="form-control" name="CurriculumName">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-primary" onclick="Select()">查找<i class="fa fa-search "></i></button>
                </span>

            </div>
        </div>

        <div class=" col-sm-12 text-right">
            @*<button onclick="Del();" class="btn btn-danger " type="button"><i class="fa fa-trash m-r-xs"></i><span class="bold" id="bdNum">恢复默认</span></button>*@
            <button class="btn btn-warning" type="button" onclick="Reset()"><i class="fa fa-repeat  m-r-xs"></i><span class="bold">重置安排</span></button>
        </div>
    </div>

    <div class="row  m-t-sm ">
        <div class="col-sm-12">
            <table class="table text-center table-bordered ">
                <thead>
                    <tr>
                        <th class="text-center">
                            <input type="Checkbox" class="i-checks checkbox-all">
                        </th>
                        <th class="text-center">序号</th>
                        <th  class="text-center">课程名称</th>
                        <th width="100px" class="text-center">章数量</th>
                        <th width="100px" class="text-center">节数量</th>
                        <th width="200px" class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody class="new_table text-center" id="tablelist"></tbody>
            </table>

        </div>

    </div>

    <!--分页开始-->
    <div class="row text-center m-t-md" id="PaginatorLibrary">
    </div>
    <!--分页结束-->

</div>



