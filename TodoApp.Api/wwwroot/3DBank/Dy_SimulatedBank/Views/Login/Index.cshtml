@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/logstyle.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.2.0.js"></script>
    <script src="~/Scripts/jquery.base64.js"></script>

    <script src="~/Scripts/plugins/layer/layer.js"></script>
    <script src="~/Scripts/login.js"></script>
    <script src="~/Content/plugins/fullavatareditor/scripts/jQuery.Cookie.js"></script>
</head>

<body>
    <form id="formLogon">
        <div class="body_bg">
            <img src="~/img/loginbeijing.png" />
        </div>
        <div id="box" class="logDiv">
            <div class="logGet">
                <img style="position: absolute; bottom: -19px; width: 390px;" src="~/img/logbottomimg.png" />
                <!-- 头部提示信息 -->
                <div class="logD logDtip">
                    <p class="p1">用户登录</p>
                </div>
                <!-- 输入框 -->
                <div class="lgD">
                    <img class="img1" src="/img/logName.png" /><input class="input_left" id="username" name="username" type="text" autocomplete="off"
                        placeholder="请输入用户账户" />
                </div>
                <div class="lgD">
                    <img class="img1" src="/img/logPwd.png" /><input class="input_left" id="password" name="password" type="password" autocomplete="off"
                        placeholder="输入用户密码" />
                </div>
                <div class="lgD jzpwd">
                    <input class="getYZM" type="checkbox"  id="remember" name="remember" />
                    <div>
                        <p>记住密码</p>
                    </div>
                </div>
                <div class="logC">
                    <button type="button" onclick="Login()">登 录</button>
                </div>
            </div>
        </div>
        <div class="logbottom">
            Copyright 2013 - 2019 深圳典阅科技有限公司 版权所有 
        </div>
        <input type="hidden" value="@ViewData["dq"]" id="dq" />
    </form>


    <script>
        window.onload = function () {
            function box() {
                //获取DIV为‘bo’的盒子
                var oBox = document.getElementById('box');
                //获取元素自身的宽度
                var L1 = oBox.offsetWidth;
                //获取元素自身的高度
                var H1 = oBox.offsetHeight;
                //获取实际页面的left值。（页面宽度减去元素自身宽度/2）
                var Left = (document.documentElement.clientWidth - L1) / 2;
                //获取实际页面的top值。（页面宽度减去元素自身高度/2）
                var top = (document.documentElement.clientHeight - H1) / 2;
                oBox.style.left = Left + 'px';
                oBox.style.top = top + 'px';
            }
            box();
            //当浏览器页面发生改变时，DIV随着页面的改变居中。
            window.onresize = function () {
                box();
            }
        }


    </script>

    <script type="text/javascript">
        $(function () {
            var dq = $("#dq").val();
            if (dq == "1") {//即将过期
                layer.open({
                    title: '系统提示',
                    anim: 1,
                    shade: 0, //遮罩透明度
                    type: 1,
                    content: '<div id="AddOpenDiv"><div style="width:300px; height:150px; line-height:120px; text-align:center;">系统即将到期，请联系供应商！</div></div>',
                    offset: "rb",

                });
            }

        })
    </script>
</body>
</html>

