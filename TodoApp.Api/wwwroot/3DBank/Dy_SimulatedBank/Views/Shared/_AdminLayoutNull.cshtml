@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">
    <title>@ViewBag.Title</title>
    <link href="~/CSS/bootstrap.min.css" rel="stylesheet" />
    <link href="~/CSS/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <!--框架自带自定义样式-->
    <link href="~/CSS/style.css" rel="stylesheet" />
    <link href="~/CSS/plugins/iCheck/custom.css" rel="stylesheet" />
    <!--弹窗插件样式-->
    <link href="~/Scripts/layer/skin/layer.css" rel="stylesheet" />

    <!-- Mainly scripts  主体js -->
    <script src="~/Scripts/jquery-3.2.0.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Scripts/plugins/slimscroll/jquery.slimscroll.min.js"></script>


    <!-- Custom and plugin javascript   自定义和插件js -->
    <script src="~/Scripts/hplus.js?v=2.2.0"></script>
    <script src="~/Scripts/plugins/pace/pace.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
    <!--弹窗js-->
    <script src="~/Scripts/layer/layer.js"></script>
    <!--头像上传插件-->
    <script src="~/Scripts/cropbox.js"></script>
    <!--验证-->
    <script src="~/Scripts/verifyform.js"></script>
    <!--分页-->
    <script src="~/Scripts/Page.js"></script>
    <!--时间插件js-->
    <script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>

    <script src="~/Scripts/jquery.form.js"></script>

    <script src="~/Js/CheckTimeOut.js"></script>

    <style type="text/css">
        /* 添加的分页样式*/
        .boder_right {
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
        }

        .paginate_button input {
            border: none;
            width: 90px;
            height: 26px;
            text-align: center;
        }

            .paginate_button input:focus {
                outline: none;
            }

        .pagesize {
            display: inherit;
            margin-left: 5px !important;
            border: none !important;
        }

            .pagesize:hover {
                background: none !important;
            }
    </style>
    <script type="text/javascript">
        //退出系统
        function onout() {
            layer.confirm('确认要退出登录吗？', {
                btn: ['确认', '取消'], //按钮
                skin: 'layui-layer-lan',
                title: '退出登录',
            }, function () {//确认
                window.location.href = '/Logout';
            });
        }
    </script>
</head>

<body>
    <div id="wrapper">
        <!--左侧菜单栏开始-->
        <!--左侧菜单栏结束-->
        <!--右侧内容区域开始-->
        <div id="page-wrapper" class="white-bg dashbard-1">
            <!--右侧头部开始-->
            <!--右侧头部结束-->
            <div id="body">
                <!--内容区域模版开始-->
                @RenderSection("featured", required: false)
                <section class="gray-bg">
                    @RenderBody()
                </section>
                <!--内容区域模版结束-->
            </div>
            @RenderSection("scripts", required: false)

            <!--主体内容结束-->
            <!--底部版权开始-->
            <div class="footer gray-bg">
                <div class="text-center">
                    <strong>Copyright</strong> 版权所有&copy;<strong> 2013 - 2019 深圳典阅科技有限公司</strong>
                </div>
            </div>
            <!--底部版权结束-->

        </div>
        <!--右侧内容区域结束-->
    </div>
</body>
@{
    string nvc = "";
    if (ViewData["nvc"] != null)
    {
        nvc = ViewData["nvc"].ToString();
    }
}
</html>

<script type="text/javascript">

    $(function () {
        sy();
    })
    function sy() {
        var strurl = window.location.pathname + "";
        var newurl = strurl.substring(strurl.lastIndexOf('/', 2));
        var search = window.location.search + "";
        $("a.alick").each(function () {
            var url = $(this).attr("href");
            var txt = $(this).html();

            if (url == newurl || txt == "@nvc") {
                $(this).parent().addClass("active")
                $(this).parent().parent().parent().addClass("active")
                $(this).parent().parent().addClass("in")
                $(this).parent().parent().attr("aria-expanded", "true")
            }

        })
    }
</script>
