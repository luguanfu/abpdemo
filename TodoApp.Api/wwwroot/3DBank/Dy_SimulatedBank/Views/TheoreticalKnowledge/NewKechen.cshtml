    $('#pptImg').bind('contextmenu', function () { return false; });


    function changeUrl(data) {
        ;
        if (typeof (data) == "undefined") {
            //alert("a");
        }
        var url = $(data).attr("data_url");
        if (url == "") {
            layer.msg("该课程没有资源")
        }
        var name = $(data).attr("data_name");
        $("#RTitle").html(name);
        $(data).attr("cuanzhong");
        var dataType = $(data).attr("data_type");
        if (dataType == ".mp4" || dataType == ".MP4" || dataType == ".mP4" || dataType == ".Mp4") {
            $("#pptImgDiv").hide();
            $("#play_ppt").hide();
            $("#mp3id").show();
            $("#MediaPlayer").hide();
            $("#mp3id").attr("src", url)
            $("#mp3id").pause();
            $("#mp3id").play();
        }
        else if (dataType == ".wmv" || dataType == ".WMV") {
            $("#mp3id").hide();
            $("#play_ppt").hide();
            $("#MediaPlayer").show();
            $("#pptImgDiv").hide();
            $("#mp3id").attr("src", url)
            $("#mp3id").pause();
            $("#mp3id").play();
        }
        else {
            $("#mp3id").hide();
            $("#play_ppt").show();
            $("#MediaPlayer").hide();
            $("#pptImgDiv").show();
            PPTPay(url, dataType);
        }

    }

    function getResources() {
        $.ajax({
            Type: "post",
            dataType: "json",
            url: '/TheoreticalKnowledge/getResources?ID=' + getQueryString('ResourcesID'),
            async: false,
            success: function (data) {
                if (data.length > 0) {
                    var url = data[0]["URL"];
                    var dataType = data[0]["Type"];
                    //alert("TYpe:" + Type + "        url:" + URL)
                    //$("#EditE_PId").val(data[0]["URL"]);
                    //$("#EditP_Name").val(data[0]["E_Name"]);

                    if (dataType == ".mp4" || dataType == ".MP4" || dataType == ".mP4" || dataType == ".Mp4") {
                        $("#pptImgDiv").hide();
                        $("#play_ppt").hide();
                        $("#mp3id").show();
                        $("#MediaPlayer").hide();
                        $("#mp3id").attr("src", url)
                        //$("#mp3id").pause();
                        $("#mp3id").play();
                    }
                    else if (dataType == ".wmv" || dataType == ".WMV") {
                        $("#mp3id").hide();
                        $("#play_ppt").hide();
                        $("#MediaPlayer").show();
                        $("#pptImgDiv").hide();
                        $("#mp3id").attr("src", url)
                        //$("#mp3id").pause();
                        $("#mp3id").play();
                    }
                    else {
                        $("#mp3id").hide();
                        $("#play_ppt").show();
                        $("#MediaPlayer").hide();
                        $("#pptImgDiv").show();
                        PPTPay(url, dataType);
                    }
                }
            }
        });
    }

    function getQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]); return null;
    }

</script>
