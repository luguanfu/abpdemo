    var page = 0;
    var z = null;
    function PPTPay(url, type) {
        var Type = type;
        var URL = url;
        if (Type == ".PPT" || Type == ".ppt" || Type == ".PPTX" || Type == ".pptx") {
            ;
            if (URL != null) {
                z = URL.split('|');
                $("#total").html(z.length);
            }
            else {
                $("#total").html(0);
            }
            PageClick(0);
        }
    }
    function PageClick(t) {
        if (z != null) {
            $("#pptImg").show();
            if (t == 0) {
                if (page == 0) {
                    $("#pptImg").attr("src", z[page]);
                } else {
                    page = page - 1;
                    $("#pptImg").attr("src", z[page]);
                }
            } else if (t == 1) {
                if (page >= z.length - 1) {
                    $("#pptImg").attr("src", z[page]);
                } else {
                    page = page + 1;
                    $("#pptImg").attr("src", z[page]);
                }
            } else {
                var inputPage = $("#inputPage").val()
                if (parseInt(inputPage) <= (z.length + 1)) {
                    page = (parseInt(inputPage) - 1);
                    $("#pptImg").attr("src", z[page]);
                } else {
                    layer.msg("请输入正确的码数!", { icon: 2 });
                    return;
                }
            }

            $("#page").html((page + 1));
        } else {
            layer.msg("暂无数据!", { icon: 2 });
            return;
        }
    }

    //屏蔽视频右键功能
