@{
    Layout = null;
}
@model TodoApp.WebFramework.Models.Product

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .red{color:red;}
        .cursor{cursor:pointer}
    </style>
</head>
<body>
    <div>
        <form id="form1" action="Add" method="post">
            <input type="hidden" name="Id" id="Id" value="@Model.Id" />
            Name:<input id="Name" name="Name" value="@Model.Name" /><br />
            是否开启：
            <input type="radio" id="isadd1" name="isAdd" value="true" checked="checked" /><label for="isadd1">开启</label>
            <input type="radio" id="isadd2" name="isAdd" value="false" /><label for="isadd2">不开启</label><br />
            <input type="submit" value="submit" />
        </form>
        <br /><br />
        ===========
        <br /><br />
        @using (Html.BeginForm("Add"))
        {
            <div>
                @Html.HiddenFor(m => m.Id)
                Name:@Html.TextBoxFor(m => m.Name)@Html.ValidationMessageFor(m => m.Name)<br />
                Age:@Html.TextBoxFor(m => m.Age)@Html.ValidationMessageFor(m => m.Age)<br />
                CategoryName:@Html.TextBoxFor(m=>m.Category.CategoryName)@Html.ValidationMessageFor(m=>m.Category.CategoryName)<br/>
                是否开启：
                @Html.RadioButton("isAdd", "true", true,new { @id="add1",@name="isAdd",@class= "cursor" })<label for="add1">是</label>
                @Html.RadioButton("isAdd", "false",new { @id="add2",@name="isAdd",@class= "cursor" })<label for="add2">否</label><br />
                <input type="submit" value="submit" />
            </div>
        }
    </div>
</body>
</html>
